# Azure Container App Resource Configuration
# Copy these environment variables to your Azure Container App

# Resource Limits
NODE_ENV=production
MAX_MEMORY_MB=400
MAX_CPU_PERCENTAGE=80
REQUEST_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=50

# Database Connection Limits
DB_POOL_MAX=5
DB_POOL_MIN=1
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# File Upload Limits
MAX_FILE_SIZE=5242880
MAX_FILES_PER_REQUEST=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
STRICT_RATE_LIMIT_WINDOW_MS=300000
STRICT_RATE_LIMIT_MAX_REQUESTS=10

# Monitoring
ENABLE_RESOURCE_MONITORING=true
MEMORY_WARNING_THRESHOLD_MB=350
CPU_WARNING_THRESHOLD=75

# Existing environment variables (keep these)
FRONTEND_URL=https://gray-stone-00b286e10.1.azurestaticapps.net
DB_HOST=cer-sql-server-2025.database.windows.net
DB_NAME=cerdb
JWT_SECRET=your_jwt_secret_here
